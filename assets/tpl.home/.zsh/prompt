#!/usr/bin/env bash
# For sheckcheck â†‘ only.

# Custom Zsh prompts.

function precmd() {
  # Left prompt (main).

  PROMPT='%F{240}'"${PWD}"$'\n';
  PROMPT+='%F{002}$ ';
  PROMPT+='%f';

  # Right side.

  RPROMPT='%F{002}'"$(whoami)";
  RPROMPT+='%F{240}@%F{006}'"$(hostname --long)";
  is_vagrant && RPROMPT+='%F{240} (VM)' || RPROMPT+='';
  RPROMPT+='%f';
};
