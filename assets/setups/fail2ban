#!/usr/bin/env bash

if [[ "${CFG_INSTALL_FAIL2BAN}" == 1 ]]; then

  # Install Fail2Ban.

  apt-get install fail2ban --yes;

  # Symlink local Fail2Ban jail config file.

  ln --symbolic /bootstrap/assets/fail2ban/.conf /etc/fail2ban/jail.local;
  perl -i -wpe 's/^(\s*)destemail\s*\=.*$/$1destemail = '"$(esc_regex_rv "${CFG_ADMIN_EMAIL}")"'/uim' /bootstrap/assets/fail2ban/.conf;

  # Restart service.

  service fail2ban restart;

else echo 'Skipping Fail2Ban installation.'; fi;
