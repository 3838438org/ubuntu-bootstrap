#!/usr/bin/env bash

options=''; while read -r _line; do
  if [[ "${_line}" =~ ^\- && "${_line}" != '-d' ]]; then
    if [[ -n "${options}" ]]; then
      options+=' '"${_line}";
    else options+="${_line}"; fi;
  fi;
done < /etc/memcached.conf; unset _line;

exec memcached "${options}" >> /var/log/memcached.log 2>&1;
